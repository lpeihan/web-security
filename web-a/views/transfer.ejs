
<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/head') %> 
  </head>

  <body>
    <%- include('partials/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-md-12 col-lg-12">
          <div class="col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
            <div class="panel panel-info">
              <div class="panel-heading">
                <h4>Transfer</h3>
                <h5>
                  <p>Username:<span id="username"> <%= user.username %></span></p>
                  <p>Balance:<span id="account"> <%= user.balance %></span></p>
                </h5>
              </div>
              <div class="panel-body">
                <form class="" action="/api/users/transfer" method="post">
                  <div class="form-group">
                    <label for="payee">Payee</label>
                    <input class="form-control" type="text" name="payee" />
                  </div>
                  <div class="form-group">
                    <label for="amount">Amount</label>
                    <input class="form-control" type="text" name="amount" />
                  </div>
                  <div class="form-group">
                    <label for="amount">Captcha</label>
                    <input class="form-control" type="text" name="captcha" />
                  </div>
                  <div class="form-group">
                    <img src="/api/users/captcha" id="captcha" />
                    <button class="btn btn-primary" type="submit">Transfer</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>

  <script>
    document.getElementById('captcha').addEventListener('click', (e) => {
      e.target.src = '/api/users/captcha?random=' + Math.random();
    });
  </script>
  </body>
  </html>